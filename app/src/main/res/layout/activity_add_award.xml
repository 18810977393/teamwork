<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.scwang.refreshlayout.activity.style.addAwardActivity">

    <EditText
        android:id="@+id/pays"
        android:layout_width="183dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/noteTitle"
        android:layout_marginTop="134dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:hint="耗费成就点数"
        android:layout_alignLeft="@+id/noteTitle" />

    <EditText
        android:id="@+id/noteTitle"
        android:layout_width="356dp"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="标题" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="159dp"
        android:layout_height="67dp"
        android:layout_alignEnd="@+id/noteTitle"
        android:layout_alignRight="@+id/noteTitle"
        android:layout_alignTop="@+id/pays"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="-4dp"></Spinner>


    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="right"
    android:layout_alignParentBottom="true">

    <Button
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@android:color/holo_red_light"
        android:onClick="cancel"
        android:text="取消" />

    <Button
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="29dp"
        android:background="@color/colorPrimary"
        android:onClick="addNote"
        android:text="添加"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="29dp" />

</RelativeLayout>
